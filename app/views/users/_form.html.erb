<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rut %><br>
    <%= f.number_field :rut %>
  </div>
  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :apellido %><br>
    <%= f.text_field :apellido %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :nacimiento %><br>
    <%= f.text_field :nacimiento %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <% if @user.avatar? %>
    <div class="form-group">
      <p>Current avatar</p>
      <%= image_tag( @user.avatar ) %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.text_field :avatar %>
  </div>
    
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
